<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd"
        >

    <parameters>
        <parameter key="litgroup_event_loop.factory.class">LitGroup\Bundle\EventLoopBundle\DefaultLoopFactory</parameter>
    </parameters>

    <services>
        <!-- Event Loop -->
        <service id="litgroup_event_loop" class="React\EventLoop\LoopInterface"
                 factory-service="litgroup_event_loop.factory" factory-method="create"/>

        <!-- Event Loop Factory -->
        <service id="litgroup_event_loop.factory" class="%litgroup_event_loop.factory.class%"/>
    </services>

</container>